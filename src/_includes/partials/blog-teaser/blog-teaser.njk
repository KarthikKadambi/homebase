<section class="blog-teaser" aria-label="Featured blog posts">
  <h2 class=blog-teaser__heading>Featured content</h2>
  <div class="grid three-columns" data-layout="thirds">
    {% for post in collections.posts %}
      <article class="flow | blog-teaser__article-">
        <h3 class="blog-teaser__article-heading"><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
        <p>{{ post.templateContent | safe }}</p>
      </article>
    {% endfor %}
  </div>
</section>