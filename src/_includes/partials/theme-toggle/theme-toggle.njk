    <svg class="sun-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
         style="display:block; color:var(--icon-color,#111); stroke:currentColor; fill:currentColor;" stroke-linecap="round">
