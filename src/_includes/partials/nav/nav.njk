<nav aria-label="{{ nav.context.label }}" class="nav">
  <ul class="{{ 'flow' if nav.context.variant === 'stacked' else 'cluster' }}" role="list">
    {%- for item in nav.context.items %}
      {%- set current = (page.url == item.href) or (page.url.startsWith(item.href) and item.href != '/') %}
      <li>
        <a href="{{ item.href }}" {%- if current %} aria-current="page"{% endif %}>{{ item.label }}</a>
      </li>
    {%- endfor %}
  </ul>
</nav>